<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".PageMonProfilActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <ImageButton
            android:id="@+id/Btnback"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:contentDescription="@string/btnback"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/backbutton" />



        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/otheruserpdp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/pdp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/avatar_base" />
        <ImageButton
            android:id="@+id/BtnEdit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:contentDescription="@string/btnedit"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_favorite"
            android:textColor="@color/black"
            android:fontFamily="@font/arial"
            android:layout_marginTop="7dp"
            android:layout_marginStart="35dp"
            android:textSize="12sp"
            android:text="@string/add_favorite"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/favoris"
            android:id="@+id/favoris"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/epingler"
            android:scaleType="fitCenter" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/send_msg"
            android:textColor="@color/black"
            android:fontFamily="@font/arial"
            android:layout_marginTop="7dp"
            android:layout_marginStart="100dp"
            android:textSize="12sp"
            android:text="@string/send_message"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/send_message"
            android:id="@+id/sendMessage"
            app:srcCompat="@drawable/message_logo"
            android:scaleType="fitCenter"
            android:visibility="visible"/>


    </LinearLayout>

    <TextView
        android:id="@+id/identite_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arial"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/biographie_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arial"
        android:text="@string/bio"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/bio_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arial"
        android:textColor="@color/black"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/classe_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/classe"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/arial"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/classe_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arial"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/email_text_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arial"
        android:text="@string/id_email"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/email_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arial"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/club_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/club"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/arial"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/club_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arial"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/loisir_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hobbies"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/arial"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/hobbies_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arial"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/res_so_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/RS"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/arial"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgLinkedIn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/logo_linkedin"
                app:srcCompat="@drawable/linkedin"
                android:scaleType="fitCenter"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/userLinkedIn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/arial"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/imgGithub"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/logo_linkedin"
                app:srcCompat="@drawable/github"
                android:scaleType="fitCenter"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/userGitHub"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/arial"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgInsta"
                android:layout_width="30dp"
                android:scaleType="fitCenter"
                android:layout_height="30dp"
                android:contentDescription="@string/logo_linkedin"
                app:srcCompat="@drawable/logo_instagram"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/userInstagramm"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/arial"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/imgSnap"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/logo_linkedin"
                app:srcCompat="@drawable/snapchat"
                android:scaleType="fitCenter"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/userSnapChat"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/arial"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgDiscord"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:contentDescription="@string/logo_linkedin"
                app:srcCompat="@drawable/discord"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/userDiscord"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/arial"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/imgWhatsapp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:contentDescription="@string/logo_linkedin"
                app:srcCompat="@drawable/whatsapp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/userWhatsapp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/arial"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>