<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".PageMonProfilActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:background="@color/bluesky"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:contentDescription="@string/btnback"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/boldthick"
            android:hint="@string/mon_profil"
            android:textColor="@color/black"
            android:textColorHighlight="@color/black"
            android:textColorHint="@color/black"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/BtnEdit"
            android:layout_width="30dp"
            android:layout_height="48dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:contentDescription="@string/btnedit"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/confimer" />
    </LinearLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/userpdp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/avatar_base"
        app:shapeAppearanceOverlay="@style/Cercle"
        android:contentDescription="@string/pdp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/identite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arial"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="25sp"
        android:visibility="visible"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/biographie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arial"
        android:text="@string/bio"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="visible"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:textStyle="bold"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/bio_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fontFamily="@font/arial"
        android:hint="@string/bio"
        android:layout_marginStart="15dp"
        android:textColor="@color/black"
        android:visibility="visible" />

    <TextView
        android:id="@+id/classe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/classe"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/arial"
        android:visibility="visible"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/class_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:visibility="visible"/>



    <TextView
        android:id="@+id/email_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arial"
        android:text="@string/id_email"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:visibility="visible"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/email_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arial"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:visibility="visible"/>


    <ProgressBar
        android:id="@+id/progessBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"></ProgressBar>

    <TextView
        android:id="@+id/club"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/club"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/arial"
        android:visibility="visible"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/club_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arial"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/loisir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hobbies"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/arial"
        android:visibility="visible"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/hobbies_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fontFamily="@font/arial"
        android:hint="@string/hobbies"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/res_so"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/RS"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/arial"
        android:visibility="visible"
        android:layout_marginStart="15dp"
        android:layout_marginTop="35dp"
        android:textStyle="bold"/>

</LinearLayout>